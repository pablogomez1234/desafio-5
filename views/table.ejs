<div class="container">
  <br>
  <% if(players.length === 0) { %>
    <h2 style="color:red">No se encontraron datos</h2>
  <% } else { %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Country</th>
        <th scope="col">Goals</th>
      </tr>
    </thead>
    <tbody>
      <% players.forEach((player, index) => { %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= player.name %></td>
          <td><%= player.country %></td>
          <td><%= player.goals %></td>
        </tr>
      <% }) %>
    </tbody>
  <% } %>
  </table>
</div>